<% if (theme.flow_bg) { %>
    <style>
      body::before, body::after {
        display: block;
        font-size: 52px;
        color: transparent;
      }

      body::after {
        opacity: 0.3;
        pointer-events: none;
        position: fixed;
        top: 50%;
        left: 50%;
        width: 3em;
        height: 3em;
        content: ".";
        mix-blend-mode: screen;
        animation: 44s -27s move infinite ease-in-out alternate;
      }

      body::before {
        background-position: center center;
        background-size: cover;
        background: url(http://spab-rice.com/wordpress/vavo/demo/wp-content/uploads/2019/08/landing-bg.jpg);
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        content: ' ';
        position: fixed;
        z-index: -1;
      }

      .dark body::before {
        background: url(http://spab-rice.com/wordpress/vavo/demo/wp-content/uploads/2019/07/blog-bg.jpg);
      }

      body::after {
        text-shadow: 1.4386483947em -0.402649144em 7px var(--roy-theme),
        2.2081843182em 1.2582179272em 7px var(--theme-primary-color-darker-200),
        1.6320732175em 1.6670289013em 7px var(--theme-primary-color-darker-100),
        -0.1317454879em 2.1709996677em 7px var(--theme-primary-color-100),
        0.3592276135em 1.3685870057em 7px var(--theme-primary-color-200),
        1.4135514006em 0.798005866em 7px var(--theme-primary-color-300),
        -0.4801627993em 2.4486225549em 7px var(--theme-primary-color-400),
        -0.3503513418em -0.314802388em 7px var(--theme-primary-color-500),
        -0.0726957977em 1.3369296939em 7px var(--theme-primary-color-600),
        -0.4520564422em 1.5557361239em 7px var(--theme-primary-color-700),
        1.2941899704em 1.9195998849em 7px var(--theme-primary-color-800);
        animation-duration: 43s;
        animation-delay: -32s;
      }

      @keyframes move {
        from {
          transform: rotate(0deg) scale(12) translateX(-20px);
        }
        to {
          transform: rotate(360deg) scale(18) translateX(20px);
        }
      }
    </style>
<% } %>
