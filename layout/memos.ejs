<!-- css -->
<%- css(theme.asset.fancybox_css) %>
<%- js(theme.asset.marked_js) %>
<section class="max-w-prose mx-auto px-2">
    <!-- header -->
    <header class="px-4 overflow-hidden pt-6 pb-6 md:pt-12">
        <div class="pt-4 md:pt-6">
            <h1 id="article-title" class="heti--serif text-[2rem] font-bold leading-snug mb-4 md:mb-6 md:text-[2.6rem]">
                <%- page.title %>
            </h1>
        </div>
    </header>
    <!-- content -->
    <article id="memos" class="bg-white dark:bg-zinc-800">
        <section class="flex flex-wrap p-0 memo md:p-5">
            <div class="flex w-full">
                <div class="w-14 h-14">
                    <img class="w-full h-full rounded object-cover no_fancy" src="<%= theme.avatar %>" alt="<%= config.author %>">
                </div>
                <div class="pl-2">
                    <p class="font-bold text-base" style="color: var(--roy-theme)"><%= config.author %></p>
                    <p class="time text-xs text-gray-400 pt-2">14:25</p>
                </div>
            </div>
            <div class="p-2 grid grid-cols-1 text-sm w-full">
                <p class="p-5" id="memos-content">
                    <i class="ri-loader-4-line animate-spin inline-block"></i>
                    正在加载中...
                </p>
            </div>
        </section>
    </article>
</section>

<style>
  .memo + .memo {
    border-top: 0.5px dashed #cccccc99;
  }
</style>

<script>
  function fetchMemos() {
    document.getElementById('memos-content').innerHTML = '<i class="ri-loader-4-line animate-spin inline-block"></i>正在加载中...'
    const imageList = (item, resourceList) => {
      const list = resourceList.filter(resource => {
        return resource.type.startsWith('image')
      })
      if (list.length === 0) {
        return ''
      }
      const imageGrid = list.length === 1 ? 1 : list.length <= 4 ? 2 : 3
      // 这样写的原因是，不能写grid-cols-${imageGrid},而要完整的把类名写完出来。这样渲染css的时候才会生效。
      const imageGridCols = imageGrid === 1 ? 'grid-cols-1' : imageGrid === 2 ? 'grid-cols-2' : 'grid-cols-3'
      return `
        <div class="${imageGridCols} pt-2 grid gap-2 w-[20rem]">
          ${list.map(resource => {
            return `<img class="rounded object-cover" style="aspect-ratio: 1" src="<%= theme.memos.url %>/o/r/${resource.id}/${resource.publicId}" alt="${item.creatorName}" />`
          }).join('\n')}
        </div>
      `
    }
    fetch("<%= theme.memos.url %>/api/memo/all?limit=<%= theme.memos.limit %>").then(resp => {
      if (resp && resp.ok) {
        resp.json().then(res => {
          const { data } = res;
          if (data && data.length) {
            document.getElementById('memos').innerHTML = data.map(item => {
              return `
                <section class="flex flex-wrap py-5 memo md:p-5">
                    <div class="flex w-full">
                        <div class="w-14 h-14">
                            <img class="w-full h-full rounded object-cover no_fancy" src="<%= theme.avatar %>" alt="${item.creatorName}">
                        </div>
                        <div class="pl-2">
                            <p class="font-bold text-base" style="color: var(--roy-theme)">${item.creatorName}</p>
                            <p class="time text-xs text-gray-400 pt-2">${new Date(parseInt(item.createdTs) * 1000).toLocaleString().replace(/:\d{1,2}$/,' ')}</p>
                        </div>
                    </div>
                    <div class="p-2 grid grid-cols-1 text-sm w-full">
                        <div class="heti">${marked.parse(item.content)}</div>
                        ${imageList(item, item.resourceList)}
                    </div>
                </section>
            `
            }).join('\n')
            doFancyBox($('#memos'))
          }
        }).catch(err => {
          document.getElementById('memos-content').innerHTML = `<p>加载失败！</p><pre>${err.message}</pre><p><button onclick="fetchMemos()">点击重试</button></p>`
        })
      } else {
        document.getElementById('memos-content').innerHTML = `<p>加载失败！</p><p><button onclick="fetchMemos()">点击重试</button></p>`
      }
    }).catch(err => {
      document.getElementById('memos-content').innerHTML = `<p>加载失败！</p><pre>${err.message}</pre><p><button onclick="fetchMemos()">点击重试</button></p>`
    })
  }
  fetchMemos()
</script>

