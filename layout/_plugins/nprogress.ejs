<%- js(theme.asset.nprogress) %>
<script>
  $(document).ready(() => {
    NProgress.configure({
      showSpinner: false,
    });
    NProgress.start();
    $("#nprogress .bar").css({
      background: "var(--roy-theme)",
    });
    $("#nprogress .peg").css({
      "box-shadow": "0 0 2px var(--roy-theme), 0 0 4px var(--roy-theme)",
    });
    $("#nprogress .spinner-icon").css({
      "border-top-color": "var(--roy-theme)",
      "border-left-color": "var(--roy-theme)",
    });
    setTimeout(function () {
      NProgress.done();
      $(".fade").removeClass("out");
    }, 800);
  });
</script>
